{
  "compilerOptions": {
    "lib": ["dom", "es2015.promise", "es5", "es6"],
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "noEmit": true,
    
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "types": [
    "arcgis-js-api",
    "moment"
  ],
  "include": [
    "typings/*.d.ts",
    "src/*"
  ]
}
